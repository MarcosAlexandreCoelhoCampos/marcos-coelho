{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "paths": {
    "@/*": ["src/*"]
  },
  "include": ["vite.config.ts", "@/**/*.tsx", "@/**/*.ts", "@/**/*.scss"],
  "exclude": ["node_modules", "build"]
}
